      div.trigger-text 
        | {{{_'r-when-the-item'}}}
      div.trigger-dropdown
        input(id="check-item-name",type=text,placeholder="{{{_'r-name'}}}") 
      div.trigger-text 
        | {{{_'r-is'}}}
