        select(id="check-item-spec-action")
          option(value="checked") {{{_'r-checked'}}}
          option(value="unchecked") {{{_'r-unchecked'}}}
    div.trigger-button.js-add-spec-check-item-trigger.js-goto-action
      i.fa.fa-plus