@import 'nib'

.list
  box-sizing: border-box;
  display: inline-block;
  height: 100%;
  margin: 0 5px;
  vertical-align: top;
  white-space: normal;
  min-width: 270px;

  &:first-child
    margin-left: 10px
    border-left: none

  .card-details + &
    border-left: none

  &.ui-sortable-helper
    box-shadow: -2px 2px 8px rgba(0, 0, 0, .3),
                0 0 1px rgba(0, 0, 0, .5)
    transform: rotate(4deg)
    cursor: grabbing

    .list-header.ui-sortable-handle
      cursor: grabbing

  &.placeholder
    background-color: rgba(0, 0, 0, .2)
    border-color: transparent
    box-shadow: none
    height: 100px

  &.list-composer, & list-composer
    padding: 17px

    form
      margin-top: -5px

    .list-name-input
      background: rgba(255, 255, 255, .4)
      border-color: #aaa
      display: block
      margin: 0
      transition: margin 85ms ease-in,
        background 85ms ease-in
      width: 100%

    .edit-controls
      height: 32px
      transition: margin 85ms ease-in,
        height 85ms ease-in
      overflow: hidden
      margin: 4px 0 0

  .js-list-content
    background: #e3e3e3
    border-radius: 3px
    box-sizing: border-box
    display: flex
    //flex: 0 0 260px
    flex-direction: column
    //margin: 0 5px
    height: 100%
    //padding: 4px 3px 3px
    position: relative
    width: 260px    

    //max-height: 100%

    &:first-child
      margin-left: 5px
      border-left: none
  &.add-list
    min-height: 30px;
    transition: background 85ms ease-in 0s, opacity 40ms ease-in 0s, border-color 85ms ease-in 0s;
    padding: 12px

  &.is-idle
    background: rgba(0, 0, 0, 0.12) none repeat scroll 0 0
    color: #fff
    //cursor: pointer

    &:hover
      background: rgba(0, 0, 0, 0.3) none repeat scroll 0 0
  .inlined-form
    color: #8c8c8c
    display: block
    padding: 7px 10px
    position: relative
    text-decoration: none
    animation: fadeIn 0.3s
    margin-bottom: 9px

.list-header
  flex: 0 0 auto
  min-height: 19px
  padding: 8px 26px 8px 10px
  position: relative


  &.ui-sortable-handle
    cursor: grab

  .list-header-name
    display: inline
    font-size: 16px
    line-height: 17px
    margin: 0
    font-weight: bold
    min-height: 9px
    min-width: 30px
    overflow: hidden
    text-overflow: ellipsis
    word-wrap: break-word

  .list-header-menu-icon
    padding: 6px
    position: absolute
    right: 0
    top: 0

.list-body
  flex: 1
  display: flex
  overflow-y: auto
  padding: 5px 11px

  .minicards
    flex: 1

    form
      margin-bottom: 9px

  .ps-scrollbar-y-rail
    transform: translateX(2px)

.open-minicard-composer
  border-radius: 0 0 3px 3px
  color: #8c8c8c
  display: block
  flex: 0 0 auto
  padding: 7px 10px
  position: relative
  text-decoration: none
  min-height: 19px

  i.fa
    margin-right: 7px

  &:hover
    background: #c3c3c3 none repeat scroll 0 0
    color: #222
    text-decoration: underline

.list.is-idle 
    background: rgba(0, 0, 0, 0.12) none repeat scroll 0 0
    color: #fff

.list.add-list 
    min-height: 30px;
    padding: 12px;
    transition: background 85ms ease-in 0s, opacity 40ms ease-in 0s, border-color 85ms ease-in 0s;
