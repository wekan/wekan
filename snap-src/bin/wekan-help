echo -e "node-options: Add more Node heap. Default:"
echo -e "\t$ snap set $SNAP_NAME node-options=\"--max_old_space_size=4096\""
echo -e "\t-Remove node-options:"
echo -e "\t$ snap unset $SNAP_NAME node-options"
