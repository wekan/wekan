echo -e "Enable:"
echo -e "\t$ snap set $SNAP_NAME attachments-upload-external-program='/usr/local/bin/avscan {file}'"
echo -e "Disable, default:"
echo -e "\t$ snap unset $SNAP_NAME attachments-upload-external-program"
